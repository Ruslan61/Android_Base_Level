<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/actualDate"
        style="@style/DataAndTime"
        android:text="10.10.20" />

    <TextView
        android:id="@+id/actualTime"
        style="@style/DataAndTime"
        android:text="10:10" />

    <TextView
        android:id="@+id/displayedCity"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/city_rostov_na_donu"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/chooseACityButton"
        style="@style/ButtonStyle"
        android:text="@string/choose_a_city_btn" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageSun"
            android:layout_width="164dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            android:src="@drawable/sun_1" />

        <TextView
            android:id="@+id/actualTemperature"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:ems="10"
            android:gravity="center"
            android:scrollbarSize="26sp"
            android:text="25"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewWeather"
            android:layout_width="280dp"
            android:layout_height="wrap_content" />

    </FrameLayout>
</LinearLayout>