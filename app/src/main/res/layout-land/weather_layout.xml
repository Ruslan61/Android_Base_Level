<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/actualDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="10.10.20" />

    <TextView
        android:id="@+id/actualTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="10:10" />

    <TextView
        android:id="@+id/displayedCity"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/city_rostov_na_donu" />

    <Button
        android:id="@+id/chooseACityButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/choose_a_city_btn"
        android:textSize="14sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow
            android:gravity="center">
            <ImageView
                android:id="@+id/imageSun"
                android:layout_width="164dp"
                android:layout_height="121dp"
                android:gravity="center"
                android:src="@drawable/sun_1" />

            <TextView
                android:id="@+id/actualTemperature"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scrollbarSize="26sp"
                android:textStyle="bold"
                android:ems="10"
                android:gravity="center"
                android:text="25" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
</LinearLayout>